    "styled-components": ">=4.0.0",
    "react": ">=15.0.0",
    "react-dom": ">=15.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "*",
    "@babel/preset-typescript": "*",
    "@emotion/core": "^10.0.9",
    "@emotion/styled": "^10.0.9",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
