    "formatAllCode": "./node_modules/.bin/prettier --parser typescript --write './src/**/*.{ts,tsx,js}'"
  },
  "author": "Albert Gao",
  "license": "MIT",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
