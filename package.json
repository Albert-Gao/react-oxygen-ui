    "docz-core": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "jest": "^24.5.0",
    "jest-dom": "^3.1.3",
    "jest-styled-components": "^6.3.1",
    "microbundle": "^0.11.0",
    "prettier": "^1.16.4",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-testing-library": "^6.0.2",
    "styled-components": "^4.1.3",
